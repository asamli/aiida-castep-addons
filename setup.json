{
    "name": "aiida-castep-addons",
    "author": "Alp Samli",
    "author_email": "zccaesa@ucl.ac.uk",
    "description": "Useful addons for the aiida-castep plugin",
    "url": "https://github.com/asamli/aiida-castep-addons",
    "license": "MIT",
    "classifiers": [
        "Programming Language :: Python",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Natural Language :: English",
        "Development Status :: 3 - Alpha",
        "Framework :: AiiDA"
    ],
    "version": "0.1.0a0",
    "entry_points": {
        "aiida.data": [
            "castep_addons = aiida_castep_addons.data:DiffParameters"
        ],
        "aiida.calculations": [
            "castep_addons = aiida_castep_addons.calculations:DiffCalculation"
        ],
        "aiida.parsers": [
            "castep_addons = aiida_castep_addons.parsers:DiffParser"
        ],
        "aiida.cmdline.data": [
            "castep_addons = aiida_castep_addons.cli:data_cli"
        ],
	"aiida.workflows": [
	    "castep_addons.converge = aiida_castep_addons.workflows.converge:CastepConvergeWorkChain",
	    "castep_addons.band_plot = aiida_castep_addons.workflows.band_plot:CastepBandPlotWorkChain",
	    "castep_addons.phonon = aiida_castep_addons.workflows.phonon:CastepPhononWorkChain"
	]
    },
    "include_package_data": true,
    "setup_requires": ["reentry"],
    "reentry_register": true,
    "install_requires": [
        "aiida-core>=1.1.0,<2.0.0",
        "sqlalchemy<1.4",
        "six",
        "psycopg2-binary<2.9",
        "voluptuous"
    ],
    "extras_require": {
        "testing": [
            "pgtest~=1.3.1",
            "wheel~=0.31",
            "coverage",
            "pytest~=6.0",
            "pytest-cov"
        ],
        "pre-commit": [
            "pre-commit~=2.2",
            "pylint>=2.5.0,<2.9"
        ],
        "docs": [
            "sphinx",
            "sphinxcontrib-contentui",
            "sphinxcontrib-details-directive; python_version>='3.0'",
            "sphinx-rtd-theme"
        ]
    }
}
